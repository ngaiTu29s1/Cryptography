{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build: all (ucrt64)",
      "type": "shell",
      "command": "C:/msys64/ucrt64/bin/g++.exe",
      "args": [
        "-std=c++17",
        "main.cpp",
        "components/components.cpp",
        "components/io_handler.cpp",
        "-I", "C:/msys64/ucrt64/include",
        "-I", "C:/Users/Tuan Tu Tran/Documents/code/Cryptography/components",
        "-L", "C:/msys64/ucrt64/lib",
        "-lcryptopp",
        "-o", "main.exe"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "label": "run: exe (PowerShell)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "& '${workspaceFolder}\\main.exe'"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "build && run",
      "dependsOrder": "sequence",
      "dependsOn": [
        "build: all (ucrt64)",
        "run: exe (PowerShell)"
      ],
      "problemMatcher": []
    }
  ]
}